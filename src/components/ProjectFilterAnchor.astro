---
import { Icon } from "astro-icon";

interface Props {
  name: string;
  iconName: string;
  page: string;
}

const { name, iconName, page } = Astro.props;
---

<li>
  <a href={`/projects/${name}`}
    ><Icon
      name={iconName}
      class={`w-12 ${
        name === page
          ? "text-primaryLight"
          : "text-white transition-all hover:text-gray-400"
      }`}
    /></a
  >
</li>
