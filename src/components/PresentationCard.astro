---
import { Icon } from "astro-icon";

interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div
  class="flex flex-col items-center p-6 px-10 sm:p-6 lg:p-6 xl:p-10 gap-1 bg-customGray-200 rounded-md w-full h-full"
>
  <Icon name={icon} class="w-10 text-primaryLight" />
  <h3 class="text-xl font-semibold">{title}</h3>
  <p class="text-gray-400 text-sm">{description}</p>
</div>
