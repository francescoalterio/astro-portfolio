---
interface Props {
  id: number;
  name: string;
  fileName: string;
  technologies: string[];
}

const { name, fileName, technologies } = Astro.props;
const imageURL = `/assets/projects/${fileName}`;
const firstTwoTechs = technologies.slice(0, 2);
---

<div class="flex flex-col gap-4 flex-1 min-w-[420px] rounded-sm">
  <img src={imageURL} alt="" class="rounded-sm" />
  <div class="flex justify-between">
    <h4 class="w-full text-xl">{name}</h4>
    <div class="flex justify-center gap-1">
      {
        firstTwoTechs.map((x) => (
          <div class=" bg-customGray-100 px-3 py-1 rounded-sm text-xs">{x}</div>
        ))
      }
    </div>
  </div>
</div>
