---
import { Icon } from "astro-icon";

interface Props {
  primary?: boolean;
  icon: string;
}

const { primary, icon } = Astro.props;
---

<div
  class={` w-56 h-56 sm:w-72 sm:h-72 md:w-52 md:h-52 lg:w-72 lg:h-72 ${
    primary ? "bg-primary" : "bg-customGray-100"
  } flex gap-6  pt-[7rem] sm:pt-[9rem] md:pt-[6.5rem] p-10 sm:p-12 md:p-6 lg:pt-36 lg:p-11 items-start`}
>
  <Icon name={icon} class="w-16 sm:w-20 md:w-12 lg:w-16" />
  <div class="flex flex-col gap-4">
    <slot />
  </div>
</div>
