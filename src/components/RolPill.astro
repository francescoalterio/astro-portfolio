---
interface Props {
  bgColor?: string;
}
const { bgColor } = Astro.props;
---

<div
  class={`${
    !bgColor && "bg-primaryLight"
  } rounded-sm text-white flex items-center gap-2 px-4 py-2 font-semibold text-xs sm:text-base `}
  style={bgColor && "background-color:" + bgColor + ";"}
>
  <slot />
</div>
